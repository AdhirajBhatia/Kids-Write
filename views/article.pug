extends layout
block content
  h1.mb-3= article.title
  h5.my-4.fw-bold Written By #{author}
  .card
    .card-body
      h5.card-text.lh-lg= article.content
  if user
    if user.id === article.author
      a.btn.btn-dark.mt-3(href="/articles/edit/" + article._id) Edit
        i.far.fa-edit.mx-2
      a.btn.btn-dark.mt-3.mx-3.delete-article(href="#" , data-id=article._id) Delete
        i.far.fa-trash-alt.mx-2
  script.
    $(document).ready(function () {
      $(".delete-article").on("click", function (e) {
      $target = $(e.target);
      const id = $target.attr("data-id");
      $.ajax({
        type:"DELETE",
        url: "/articles/" + id,
        success : function (response) {
          window.location.href = "/"
        },
        error : function (error) {
          console.log(error);
        }
      })
    });
    });