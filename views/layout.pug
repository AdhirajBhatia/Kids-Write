html(lang="en")
  head
    title Kids Write
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/style.css')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
    link(rel='icon' href='https://i.postimg.cc/zGtdTdxJ/blogging.png')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        a.navbar-brand(href='/') Kids Write
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current='page' href='/') Home
            if user
              li.nav-item
                a.nav-link.active(href='/articles/add') Add Article
          ul.nav.navbar-nav.navbar-right
            if user
              li 
                a.nav-link.active(href="/users/logout") Logout
            else
              li
                a.nav-link.active(href='/users/register') Register
              li
                a.nav-link.active(href='/users/Login') Login
    .container.my-4
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
    

        
