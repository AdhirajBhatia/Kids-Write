extends layout

block content
  h1 #{title}
  form(method='POST', action='/articles/edit/' + article._id)
    #form-group.mb-3
      label.mb-2 Title:
      br
      input.form-control(name='title', type='text' , value=article.title)
    #form-group.none
      label Author:
      input.form-control(name='author', type='text', value=article.author)
    #form-group.mb-3
      label.mb-2 Content:
      textarea(name='content' type='text' , id="editor") !{article.content}
    input.btn.btn-dark(type='submit',value='Submit')
    script.
      CKEDITOR.replace('editor')